generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Post {
  id        String      @id @default(uuid())
  title     String
  coverUrl  String?
  blocks    PostBlock[]
  createdAt DateTime    @default(now())
}

model PostBlock {
  id        String   @id @default(uuid())
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  type      BlockType
  text      String?
  imageUrl  String?
  order     Int

  createdAt DateTime @default(now())
}

enum BlockType {
  TEXT
  IMAGE
}
